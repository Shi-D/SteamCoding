			</result>
		</action>

		<action name="getDetailHomework"
			class="com.steam.action.homeworkmanagement.HomeworkInfoAction"
			method="getDetailHomework">
			<result name="result>json" type="json">
				<param name="root">results</param>
			</result>
		</action>

		<action name="queryCoursework"
			class="com.steam.action.homeworkmanagement.HomeworkInfoAction"
			method="queryCoursework">
			<result name="result>json" type="json">
