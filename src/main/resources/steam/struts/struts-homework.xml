			</result>
		</action>

		<action name="updateHomework"
			class="com.steam.action.homeworkmanagement.HomeworkInfoAction"
			method="updateHomework">
			<result name="result>json" type="json">
				<param name="root">results</param>
			</result>
		</action>
	</package>
</struts> 